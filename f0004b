név = input('Hogy hívák ? ')
kor = input('És hány éves? ') 
kor = int(kor) 
év = input('Melyik évben járunk? ')
év = int(év)
születési_év = év - kor
print(név, ',  ', születési_év, '-ban született.', sep='')
érettségi_év = születési_év + 18
print(név, ', , érettségi_év, '-ban érettségizik.', sep='') 
